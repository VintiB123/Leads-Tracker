{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Leads tracker",
    "host_permissions": [
        "http://%2A/*",
        "https://%2A/*"
      ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["index.js"],
        "persistent": false
      },
      "browser_action": {
        "default_popup": "index.html"
      },
    "permissions": [
        "tabs", 
        "activeTab"
    ]
}